<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <report id="report_dailyReportExternalayout"
          string="Daily External Report"
          model="libros"
          report_type="qweb-html"
          name="primer_modulo.dailyReportExternalayout"
          menu="True"
          print_report_name="'Report %s %s of the covid-19'"
        />

        <template id="dailyReportExternalayout">


            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page" style="font-size:18px">

                                <table class="table">
                                  <thead>
                                    <tr>
                                      <th scope="col">#</th>
                                      <th scope="col">First</th>
                                      <th scope="col">Last</th>
                                      <th scope="col">Handle</th>
                                    </tr>
                                  </thead>
                                  <tbody>
                                    <tr>
                                      <th scope="row">1</th>
                                      <td>Mark</td>
                                      <td>Otto</td>
                                      <td>@mdo</td>
                                    </tr>
                                    <tr>
                                      <th scope="row">2</th>
                                      <td>Jacob</td>
                                      <td>Thornton</td>
                                      <td>@fat</td>
                                    </tr>
                                    <tr>
                                      <th scope="row">3</th>
                                      <td colspan="2">Larry the Bird</td>
                                      <td>@twitter</td>
                                    </tr>
                                  </tbody>
                                </table>

                                <table border="2px"> <!-- Lo cambiaremos por CSS -->
                                    <tr>
                                        <td rowspan="3">Campo unificado
                                            <img src="..." class="rounded mx-auto d-block" alt="..."/>
                                        </td>
                                        <td>Campo 2</td>
                                        <td>Campo 3</td>
                                    </tr>
                                    <tr>
                                        <td>Campo 5</td>
                                        <td>Campo 6</td>
                                    </tr>
                                    <tr>
                                        <td>Campo 8</td>
                                        <td>Campo 9</td>
                                    </tr>
                                </table>

                                <div class="row">
                                    <div class="col-md-12" align="center">
                                        <h2>Reporte CVID-19 <span t-field="o.name" /></h2>
                                        <img t-if="o.image"
                                                 t-att-src="'data:image/png;base64,%s' % to_text(o.image)"
                                                 height="140" border="1" width="120"/>
                                        <h4>Versi√≥n Registro Manual</h4>
                                        <h5>Fuente <span t-field="o.isbn" /></h5>

<!--                                        <img t-attf-src = {{o.polo}} />-->
                                    </div>

                                </div>
                                <div class="row mt8">
                                    <div class="col-md-12" >
                                        <span t-esc="o.ejemplo_pdf()" ></span>
                                        <img t-att-src="o.grafico()" style="height: 200px;" alt="Grafico 1"/>
                                    </div>
                                </div>
                                <div class="row mt8">
                                    <div class="col-md-12" >
                                        Total Deseaced: <span t-field="o.editorial" />
                                        <h1>CANVAS 5.5</h1>
                                        <canvas id="myChart" height="100"></canvas>
                                        <img id="myChart2" height="500" src=""/>
                                    </div>
                                </div>
                        </div>
                    </t>
                </t>
            </t>
            <xpath expr="." position="inside">

                <script type="text/javascript"
                        src="/primer_modulo/src/js/framework.js"/>
    <!--            <link rel="stylesheet" type="text/css" href="/primer_modulo/src/css/hello.css"/>-->
                <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.6.2/chart.js"></script>
                 <script>
                        alert('BEN TO')
                        const ctx = document.getElementById('myChart').getContext('2d');
                        const myChart = new Chart(ctx, {
                          type: 'line',
                          data: {
                            labels: ['Red', 'Blue', 'Yellow', 'Green', 'Purple', 'Orange'],
                            datasets: [{
                              label: '# of Votes',
                              data: [12, 19, 3, 5, 2, 3],
                              backgroundColor: [
                                'rgba(255, 99, 132, 0.2)',
                                'rgba(54, 162, 235, 0.2)',
                                'rgba(255, 206, 86, 0.2)',
                                'rgba(75, 192, 192, 0.2)',
                                'rgba(153, 102, 255, 0.2)',
                                'rgba(255, 159, 64, 0.2)'
                              ],
                              borderColor: [
                                'rgba(255, 99, 132, 1)',
                                'rgba(54, 162, 235, 1)',
                                'rgba(255, 206, 86, 1)',
                                'rgba(75, 192, 192, 1)',
                                'rgba(153, 102, 255, 1)',
                                'rgba(255, 159, 64, 1)'
                              ],
                              borderWidth: 1
                            }]
                          },
                          options: {
                            scales: {
                              y: {
                                beginAtZero: true
                              }
                            }
                          }
                        });


                        var canvas = document.getElementById("myChart");
                        document.getElementById("myChart2").src = "'" + canvas.toDataURL() + "'";

                 </script>
                
            </xpath>

        </template>

    </data>
</odoo>